create table person(
    id int primary key generated by default as identity,
    name varchar(100) not null,
    age int check ( age < 100 )
);

create table item(
    id int primary key generated by default as identity,
    person_id int references person(id) on delete set null,
    item_name varchar(100) not null
);

insert into person(name, age) values('Bob', 35);
insert into person(name, age) values('Tom', 45);
insert into person(name, age) values('Vasaj', 30);

insert into item(person_id, item_name) values(1, 'Book');
insert into item(person_id, item_name) values(1, 'Table');
insert into item(person_id, item_name) values(2, 'TV');
insert into item(person_id, item_name) values(3, 'Cat');
insert into item(person_id, item_name) values(3, 'Dog');
insert into item(person_id, item_name) values(3, 'Kindle');